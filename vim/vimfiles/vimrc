" execute pathogen#infect()
call plug#begin()
Plug 'ervandew/supertab'
Plug 'jiangmiao/auto-pairs'
Plug 'justinmk/vim-sneak'
Plug 'tomtom/tcomment_vim'
Plug 'editorconfig/editorconfig-vim'
Plug 'fatih/vim-go', { 'for': 'go' }
Plug 'pangloss/vim-javascript', { 'for': 'javascript' }
Plug 'vim-scripts/HTML-AutoCloseTag', { 'for': 'html' }
Plug 'duganchen/vim-soy', { 'for': 'soy' }
call plug#end()

syntax on
filetype plugin indent on
let mapleader = "\<space>"

set autoread hidden
set shiftwidth=4 tabstop=4 backspace=indent,eol,start
set expandtab
set smartcase incsearch
set guicursor=n:blinkon0
set lazyredraw
set mouse=a mousemodel=extend
set number ls=0
set omnifunc=syntaxcomplete#Complete
set shortmess=atIc
set ttyfast ttyscroll=3
set wildmenu wildmode=longest,list,full
set path+=**
set noerrorbells vb t_vb=""
set nowritebackup noswapfile viminfo="NONE"
set nostartofline
set nowrap
set nofoldenable

runtime macros/matchit.vim

""" mappings
nn j gj
nn k gk
inoremap jj <esc>
vn < <gv
vn > >gv
nm <silent> <leader>b :ls<cr>:e #
nn <silent> <leader>q :call wipeout#Wipeout()<cr>
noremap  <F1> :set hls!<cr>
inoremap <F1> <nop>
nn <F2> :set invlist!<cr>

" strip trailing whitespace on save
au BufWritePre * :%s/\s\+$//e
" enter automatically into the files directory
au BufEnter * silent! lcd %:p:h
au FileType css,html,json,ruby,sh,vim setlocal expandtab tabstop=2 shiftwidth=2
au FileType javascript setlocal noexpandtab tabstop=4 shiftwidth=4
au FileType go setlocal noexpandtab shiftwidth=8 tabstop=8

" netrw settings
let g:netrw_banner       = 0
let g:netrw_browse_split = 0
let g:netrw_cursor       = 0
let g:netrw_cursorline   = 0
let g:netrw_dirhistmax   = 0
let g:netrw_fastbrowse   = 2
let g:netrw_keepdir      = 1
let g:netrw_list_hide    = '*.db,desktop.ini,\.DS_Store,\.\/$'
let g:netrw_winsize      = 24

" vim-go
let g:go_fmt_autosave =                        1
let g:go_fmt_command =                         "goimports"
let g:go_highlight_array_whitespace_error =    0
let g:go_highlight_space_tab_error =           0
let g:go_highlight_trailing_whitespace_error = 0

colo jellybeans

" gvim specific settings
au! GuiEnter * silent set visualbell t_vb=""
if has("gui_running")
  set guioptions-=L
  set guioptions-=T
  set guioptions-=e
  set guioptions-=m
  set guioptions-=r
  if has("mac")
    set guifont=Menlo:h14
  elseif has("win32")
    set guifont=Consolas:h11    ndif
  endif
endif

hi Visual term=none ctermfg=White gui=reverse guifg=White
