[alias]
	l = log --oneline
	pr = "!f() { local b=\"pull/$2\"; git fetch --update-head-ok \"$1\" +\"pull/$2/head:$b\"; git checkout $b; }; f"
	s = status

[core]
	fileMode = false
	logAllRefUpdates = true
	precomposeUnicode = true
	quotepath = false
	safecrlf = false

[color]
	diff = true

[diff]
	tool = vimdiff
	renameLimit = 999999

[difftool "vimdiff"]
	cmd = vim -f -d \"$LOCAL\" \"$REMOTE\"

[http]
	sslVerify = false

[merge]
	conflictStyle = diff3
	tool = vimdiff
	renameLimit = 999999

