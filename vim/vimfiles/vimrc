call plug#begin()
Plug 'tpope/vim-commentary'
Plug 'junegunn/fzf', { 'dir': '~/.fzf' }
Plug 'vim-scripts/HTML-AutoCloseTag', { 'for': 'html' }
Plug 'w0rp/ale', { 'for': 'javascript' }
call plug#end()

syntax on
filetype plugin indent on
let mapleader="\<Space>"

set autoread hidden bg=dark
set backspace=indent,eol,start
set expandtab shiftwidth=2 tabstop=2
set dir=/tmp
set grepprg=rg\ --vimgrep
set guicursor+=a:blinkon0
set ignorecase incsearch
set number synmaxcol=200
set lazyredraw ttyfast so=2 ttyscroll=3 scrolljump=8
set mouse=a
set path+=**
set wildignore+=.git/*,.gradle/*,node_modules/*
set wildmenu wildmode=longest,list,full
set noshowmatch nocursorline noruler
set noerrorbells vb t_vb=""
set nostartofline nowrap

nn j gj
nn k gk
vn < <gv
vn > >gv
nn <F1> :set hls!<CR>
im <F1> <nop>
nn <F2> :set invlist!<CR>
nn <F3> :set nonu!<CR>
nn <silent> <leader>q :bufdo bd!<CR>
nm <silent> <C-t> :FZF<CR>

au BufWritePre * :%s/\s\+$//e " strip trailing whitespace on save
au BufNewFile *.html silent! 0r $HOME/.vim/templates/tpl.html
au FileType *.go,c,cpp,groovy,java,jsp,python setlocal noet sw=4 ts=4
au FileType javascript setlocal noet sw=2 ts=2
au FileType * setlocal formatoptions-=cro

let g:netrw_banner = 0
let g:netrw_cursor = 0
let g:netrw_dirhistmax = 0
let g:netrw_list_hide = '\$Recycle.Bin,\.DS_Store,\.\/$,\.DAT*,\.LOG*'
let g:ale_fix_on_save = 1
let g:ale_lint_on_text_changed = 'never'
let g:ale_lint_on_enter = 0
let g:ale_linters = { 'java': [''], 'javascript': [''] }
let g:ale_linters_explicit = 1
let g:plug_window = 'new'

colo space
au! GuiEnter * silent set visualbell t_vb=""
if has("gui_running")
  set go=""
  if has("mac")
      set guifont=Menlo:h14
  elseif has("unix")
      set guifont=Menlo\ 11
  elseif has("win32")
    set guifont=Consolas:h13
  endif
endif
