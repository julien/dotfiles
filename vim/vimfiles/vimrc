syntax on
filetype plugin indent on
let mapleader = "\<space>"

set autoread hidden
set expandtab shiftwidth=2 tabstop=2 backspace=indent,eol,start
set smartcase incsearch
set guicursor=n:blinkon0
set mouse=a mousemodel=extend
set number ls=2
