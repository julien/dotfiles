set rtp+=$HOME/.vim-plugins/git-messenger.vim
set rtp+=$HOME/.vim-plugins/skim
set rtp+=$HOME/.vim-plugins/vim-lsc,$HOME/.vim-plugins/vim-lsc/after

filetype plugin indent on
syntax on
let mapleader="\<Space>"
set autoread
set backspace=indent,eol,start
set completeopt-=preview
set hidden
set ignorecase incsearch smartcase
set number
set lazyredraw
set mouse=a
set nobackup nowritebackup nocursorline noendofline nofixendofline nowrap notitle
set noerrorbells visualbell t_vb=""
set shiftwidth=4 tabstop=4
set synmaxcol=200 ttyfast
set termguicolors
set wildignore+=.git/*,.gradle/*,node_modules/*
set wildmenu wildmode=longest,list,full

ino ii <ESC>
nm <silent> <C-t> :SK<CR>
nn <F1> :set hls!<CR>
nn <F2> :set invlist!<CR>
nn <F3> :set number!<CR>
nn <F4> :set wrap!<CR>
nn <silent> <leader>e :Explore<CR>
nn <silent> <leader>q :%bw!<CR>
nn <leader>f /
nn j gj
nn k gk
nn n nzz
vn < <gv
vn > >gv

au BufWritePre * :%s/\s\+$//e " strip trailing whitespace on save
au FileType qf setlocal wrap
au FileType gitcommit setlocal spell

let g:netrw_banner = 0
let g:netrw_cursor = 0
let g:netrw_dirhistmax = 0

colo ir_black
au! GuiEnter * silent set visualbell t_vb=""
if has("gui_running")
  set go=""
  set guicursor+=a:blinkon0
  set guifont=Ubuntu\ Mono\ 14
endif