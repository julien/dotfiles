startup_message off
defscrollback 500000
defutf8 on
# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"
# tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
# erase background with current bg color
defbce on
# set TERM
term xterm-256color
# scroll with mouse
termcapinfo xterm* ti@:te@
# status
hardstatus off
# remove useless startup messages
msgminwait 0
msgwait 0
shelltitle ""
altscreen on
vbell off
defflow off
autodetach on
nonblock on
bindkey "^[f" next
bindkey "^[b" prev
bind n screen
bind w windowlist
bind x kill
