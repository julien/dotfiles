# vim: ft=gitconfig noet
[alias]
	edit = !vim `git ls-files -m` -p
	fi = !git ls-files | grep -i
	gr = grep -Ii
	l  = log --oneline
	lf = log --numstat
	ll = log -p --oneline HEAD~1...HEAD
	s = status -sb
	sm = diff --name-status --diff-filter=U # show unmerged

[core]
	excludesfile = /Users/jc/.gitignore
	filemode = false
	precomposeUnicode = true
	quotepath = false
	safecrlf = false

[color]
	diff = true

[diff]
	tool = vimdiff

[difftool "vimdiff"]
	cmd = vim -f -d \"$LOCAL\" \"$REMOTE\"

[http]
	sslVerify = false

[merge]
	tool = vimdiff
	conflictStyle = diff3

[merge "npm-merge-driver"]
	name = automatically merge npm lockfiles
	driver = npx npm-merge-driver merge %A %O %B %P

[user]
	name = Julien Castelain
	email = julien.castelain@liferay.com
	logallrefupdates = true
