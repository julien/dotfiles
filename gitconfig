# vim: ft=gitconfig
[user]
  name = Julien Castelain
  email = julien.castelain@liferay.com
  logallrefupdates = true

[core]
  excludesfile = /Users/jc/.gitignore
  filemode = false
  precomposeUnicode = true
  quotepath = false
  safecrlf = false

[color]
  diff = true

[diff]
  tool = vimdiff

[difftool "vimdiff"]
  cmd = vim -f -d \"$LOCAL\" \"$REMOTE\"

[merge]
  tool = vimdiff

[alias]
  edit = !vim `git ls-files -m` -p
  fi = !git ls-files | grep -i
  gr = grep -Ii
  lf = log --pretty=format:'%C(green)%h%C(cyan)%d %C(reset)%s%C(white) [%cn]' --decorate --numstat
  s = status -sb
  sm = diff --name-status --diff-filter=U # show unmerged

[http]
  sslVerify = false

[push]
  default = simple
