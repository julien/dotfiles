# vim: ft=gitconfig
[user]
  name = Julien C
  email = jcastelain@gmail.com
  logallrefupdates = true

[core]
  safecrlf = false
  quotepath = false
  precomposeUnicode = true
  filemode = false

[color]
  diff = true

[diff]
  tool = vimdiff

[difftool "vimdiff"]
  cmd = vim -f -d \"$LOCAL\" \"$REMOTE\"

[merge]
  tool = vimdiff

[alias]
  edit = !vim `git ls-files -m` -p
  fi = !git ls-files | grep -i
  gr = grep -Ii
  lf = log --pretty=format:'%C(yellow)%h%C(red)%d %C(reset)%s%C(blue) [%cn]' --decorate --numstat
  s = status -sb
  shs = !sh -c 'git stash show -p stash@{$0}'
  # show un merged
  sm = diff --name-status --diff-filter=U

[http]
  sslVerify = false

[push]
  default = simple
