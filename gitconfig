# vim: ft=gitconfig
[alias]
	edit = !vim `git ls-files -m` -p
	fi = !git ls-files | grep -i
	gr = grep -Ii
	l  = log --oneline
	lf = log --numstat
	lg = !git log --oneline | sk --no-multi
	ll = log -p --oneline HEAD~1...HEAD
	s = status

[core]
	excludesfile = /home/jc/.gitignore
	filemode = false
	precomposeUnicode = true
	quotepath = false
	safecrlf = false

[color]
	diff = true

[diff]
	tool = vimdiff

[difftool "vimdiff"]
	cmd = vim -f -d \"$LOCAL\" \"$REMOTE\"

[http]
	sslVerify = false

[merge]
	conflictStyle = diff3
	tool = vimdiff

[merge "npm-merge-driver"]
	driver = npx npm-merge-driver merge %A %O %B %P
	name = automatically merge npm lockfiles

[user]
	email = julien.castelain@liferay.com
	logallrefupdates = true
	name = Julien Castelain
