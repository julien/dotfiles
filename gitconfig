	fileMode = false
	precomposeUnicode = true
	quotepath = false
	safecrlf = false

[color]
	diff = true

[diff]
	tool = vimdiff
	renameLimit = 999999999

[difftool "vimdiff"]
	cmd = vim -f -d \"$LOCAL\" \"$REMOTE\"

[http]
	sslVerify = false

[merge]
	conflictStyle = diff3
	tool = vimdiff
	renameLimit = 999999

[merge "npm-merge-driver"]
	driver = npx npm-merge-driver merge %A %O %B %P
	name = automatically merge npm lockfiles

