# map Capslock to ESC
setxkbmap -option caps:escape &

# turn off beep sound
xset -b

# mouse speed
xset m 1/5

# keyboard repeat speed
xset r rate 300 50

# set a background color
xsetroot -solid grey5

# set background image
# feh --bg-fill ...

# start xscreensaver
xscreensaver -no-splash &

# start dropbox after a slight delay
# (sleep 6s && dropbox start)
